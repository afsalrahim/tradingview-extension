{
    "manifest_version": 3,
    "name": "TradingView Watchlist Automator",
    "version": "1.0",
    "description": "Automates the creation of TradingView watchlists from screener results.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "128": "images/icon128.png"
    },
    "content_scripts": [
      {
        "matches": ["https://in.tradingview.com/chart/*"],
        "js": ["content.js", "popup.js"]
      }
    ]
  }